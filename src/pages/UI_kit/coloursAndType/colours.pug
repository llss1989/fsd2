include /components/logo/logo.pug
include /components/colorData/colorData.pug
include /components/types/type.pug

doctype html
html
  head
    title Colours and Types
    
  body
    .page
      .colours
        +logo('theme-UI')
        .colour-items
          +colorData('Dark Shade 100%', '#1F2041','dark100')
          +colorData('Dark Shade 75%', '#1F2041', 'dark75')
          +colorData('Dark Shade 50%', '#1F2041', 'dark50')
          +colorData('Dark Shade 25%', '#1F2041', 'dark25')
          +colorData('Dark Shade 5%', '#1F2041', 'dark5')
          +colorData('Purple', '#BC9CFF', 'purple')
          +colorData('Green', '#FCF97', 'green')
      .types
        .types-item
          +type('H1','This one is the sub-section or widget title')
          +type('H2', 'Next one is the item title inside widgets')
          +type('H3', 'This is a label or CTA text')
          +type('Body', 'This is the body text which is used for most of the design, like paragraphs, lists, etc.')
include /components/headerOfComponent/headerOfComponent.pug
include /components/dropdown/dropdown.pug
include /components/filterDateDropdown/filterDateDropdown.pug
include /components/dateDropdown/dateDropdown.pug
include /components/arrowForward/arrowForward.pug
include /components/check/check.pug
include /components/radioCheck/radioCheck.pug
include /components/ratings/ratings.pug
include /components/like/like.pug
include /components/button/button.pug
include /components/rangeSlider/rangeSlider.pug
include /components/pagination/pagination.pug
include /components/bulletList/bulletList.pug
include /components/dropdownList/dropdownList.pug
include /components/roomQuality/roomQuality.pug
include /components/feedback/feedback.pug
include /components/emailForm/emailForm.pug


- const parametersHeaderOfFilterDropdown = ['filter date dropdown', 'invisible', '', 'wide']
- const parametersHeaderOfSubscriptionTextField = ['subscription text field', 'invisible', '', 'wide']

- const optionsForDateDropdown = { inputName: 'email', inputType: 'text', textOfInput: 'Email', modificator: 'wide', theme: 'main-theme',firstInputName: "date dropdown", secondInputName: "date dropdown", inputPositionModificator: 'mt5'}
- const optionsForInputEmail =  { inputName: 'email', inputType: 'text', textOfInput: 'Email', modificator: 'wide', theme: 'main-theme'}
- const optionsOfInputText =  { inputName: 'text', inputType: 'text', textOfInput: 'This is pretty awesome', modificator: 'wide', theme: 'main-theme'}
- const optionsOfInputDate = { inputName:'date-text', inputType: 'text', textOfInput: 'ДД.ММ.ГГГГ', modificator:'wide', theme: 'main-theme'}
- const optionsForInputEmailStandart =  { inputName: 'email', inputType: 'text', textOfInput: 'Email', modificator: 'standart', theme: 'main-theme', additionalModificator: 'border-none'}
- const itemsOfExpandedCheckBoxList = {type: "check", items: ['завтрак', "письменный стол", "стул для кормления", "кроватка", "телевизор", "шампунь"]}

doctype html
html
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible" content="IE=E dge")
    meta(name="viewport" content="width=device-width,initial-scale=1, maximum-scale= 1.0, user-scalable=0")
    link(href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet")
    link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css")
    title Form Elements
   
body
  .form-elements
    span(class="form-elements__logo-wrapper form-elements__logo-wrapper_ml30 form-elements__logo-wrapper_mt30")
      +logo()
    
    div(class='form-elements__items form-elements__items_mt143 inputs')
      
      div(class='inputs__item  item inputs__item_email')
        +input(optionsForInputEmail, 'text field' , 'default')
      
      div(class='inputs__item inputs__item_text')
        +input(optionsOfInputText, "text field", "hover/focus")
      
      div(class='inputs__item  inputs__item_dropdownQuests')
        +dropdown('guests', 'size-wide', { name: "dropdown"})
      
      div(class='inputs__item  inputs__item_maskedText')
        +input(optionsOfInputDate, "masked text field")
      
      div(class='inputs__item inputs__item_dateDropdown')
        +dateDropdown(optionsForDateDropdown)
      
      div(class='inputs__item inputs__item_filterDropdown')  
        +filterDateDropdown(true,parametersHeaderOfFilterDropdown)
      
      div(class="inputs__item inputs__item_sub-text-field")
        h2(class="email-form__title")="subscription text field"
        +emailForm(optionsForInputEmailStandart)
    
    
    div(class="form-elements__items form-elements__items_mt143")
      
      fieldset(class="form-elements_item checkboxes")
        legend(class="form-elements__title checkboxes_title")="check buttons"
        
        div(class="checkboxes_inner")
          
          +check('можно курить', false, {checkType: 'standart', labelStyle: 'normal-text', labelPosition: 'pl30px'})
          +check('можно с питомцами', false, {checkType: 'standart', labelStyle: 'normal-text', labelPosition: 'pl30px'})
          +check('можно пригласить гостей <br> (до 10 человек)', false, {checkType: 'standart', labelStyle: 'normal-text', labelPosition: 'pl30px'})
      
      
      fieldset(class="form-elements_item form-elements_item_radio-buttons radio-buttons")
        legend(class="form-elements__title radio-buttons__title")="radio buttons"
        
        .radio-buttons__inner
          +radioCheck("gender" ,"male", "мужчины", "female", "женщины")
      
      
      fieldset(class="form-elements_item form-elements_toogle-buttons")
        legend(class="form-elements__title toogle-buttons__title")="toogle"
        
        .toogle-radioButtons__inner
          +check('Получать спецпредложения', false, {checkType: 'toogle', labelStyle: 'normal-text', labelPosition: 'pl51px'})
          +check('Получать спецпредложения', false, {checkType: 'toogle', labelStyle: 'normal-text', labelPosition: 'pl51px'})
      
      
      div(class="form-elements_item form-elements_item_rate-buttons rate-buttons")
        h2(class="form-elements__title")="rate button"
        
        div(class="rate-buttons__inner")
          +ratings('4')
          +ratings('5')
      
      
      div(class="form-elements__item form-elements__item_like-buttons like-buttons")    
          h2(class="form-elements__title like-buttons__title")="like button"
          
          div(class="like-buttons__inner")
            +like('standart-size', 'disabled', '2')
            +like('standart-size', 'checked', '12')   
    
    
    div(class='form-elements__items form-elements__items_mt143')
      
      div(class="form-elements_item form-elements_item_range-slider range-slider") 
        +headerOfComponent('range slider', '5 000₽ - 10 000₽', '', 'standart-size')
        +rangeSlider()
      
      div(class="form-elements_item form-elements_item_buttons buttons")
        +headerOfComponent('buttons', 'invisible', '', 'standart-size')
        
        div(class="buttons__inner")
          +button('click me', false, 'size-standart', 'main-theme', '')
          +button('click me', false, 'size-standart', 'main-theme', 'active')
          +button('click me', false, 'size-standart', 'secondary-theme', '')
          +button('click me', false, 'size-standart', 'secondary-theme', 'active')
          .buttons__inner-without-border-buttons
            +button('click me', false, 'small-size', 'without-border-theme', '')
            +button('click me', false, 'small-size', 'without-border-theme', 'without-border-theme-active')
          .buttons__inner-theme-with-arrow
            +button('Перейти к оплате', true, 'wide', 'theme-with-arrow', 'ml29perc')
    
      div(class="form-elements_item form-elements_item_pagination pagination") 
        +headerOfComponent('pagination', 'invisible', '', 'standart-size')
        +pagination()
    
    
    div(class="form-elements__items form-elements__items_mt100")
      .form-elements__item
        +dropdown('rooms', 'size-standart', { name: "dropdown", status: "default", positionModificator: "space-between"})
      .form-elements__item
        +dropdown('rooms_showcase','size-standart', { name: "dropdown", status: "expanded", positionModificator: "space-between"})
    
    
    div(class="form-elements__items form-elements__items_mt100")
      .form-elements__item
        +dropdown('guests_showcase-one', 'size-wide', { name: "dropdown"})
    
    div(class="form-elements__items form-elements__items_mt100")
      .form-elements__item
        +dropdown('guests_showcase-two', 'size-wide', { name: "dropdown"})
    
    div(class="form-elements__items form-elements__items_mt170")
    
      +dropdownList(itemsOfExpandedCheckBoxList, { itemSize: 'standart-size', nameOfList: 'expandable checkbox list', titleStyleModificator: 'main-theme', status: 'closed'}, {checkType: 'standart', labelStyle: 'normal-text', labelPosition: 'pl30px', checkPosition: 'mt12'})
      +dropdownList(itemsOfExpandedCheckBoxList, { itemSize: 'standart-size', nameOfList: 'expandable checkbox list', titleStyleModificator: 'main-theme', status: 'opened'}, {checkType: 'standart', labelStyle: 'normal-text', labelPosition: 'pl30px', checkPosition: 'mt12'})
    
    div(class="form-elements__items form-elements__items_mt170")
      
      fieldset(class="form-elements_item rich-checkboxes")
        legend(class="form-elements__title rich-checkboxes_title")="rich checkbox buttons"
        
        div(class="rich-checkboxes_inner")
          +check('широкий коридор', 'ширина коридоров в номере <br>не менее 91 см.', {checkType: 'standart', labelStyle: 'bold-text', labelPosition: 'pl30px', subtitleStyle: 'normal', subtitlePosition: 'pl30px'})(class="check__subtitle_mt")
          +check('помощник для инвалидов', 'на 1 этаже вас встретит специалист <br> и проводит до номера.', {checkType: 'standart', labelStyle: 'bold-text', labelPosition: 'pl30px', subtitleStyle: 'normal', subtitlePosition: 'pl30px'})(class="check__subtitle_mt")
    div(class="form-elements__items form-elements__items_mt170")
      +bulletList({title: 'bullet list',  titleMod: "size-standart", additionalTitleMod: "uppercase"}, ['нельзя с питомцами', 'без вечеринок и мероприятий', 'Время прибытия — после 13:00, <br> а выезд до 12:00'])
    
    
    div(class="form-elements__items form-elements__items_mt44")
      +roomQuality({iconType:'insert_emoticon', themeModificator: 'main-theme'}, { title: 'комфорт', themeModificator: 'main-theme'}, { subtitle: 'шумопоглощающие стены', themeModificator: 'main-theme'})
      +roomQuality({iconType:'location_city', themeModificator: 'main-theme'}, { title: 'удобство', themeModificator: 'main-theme'}, { subtitle: 'окно в каждой из спален', themeModificator: 'main-theme'})

    
    div(class="form-elements__items form-elements__items_feedback")
      +feedback({modificator: "murad"}, { name: "мурад сарафанов", modificator: "main-theme"}, { date: "5 дней назад", modificator: "main-theme"}, { subtitle: `<span class="feedback__subtitle feedback__subtitle_uppercase">в</span>еликолепный матрас на кровати в основной спальне! <span class="feedback__subtitle feedback__subtitle_uppercase">a</span> пуфик вообще потрясающий.
<span class="feedback__subtitle feedback__subtitle_uppercase">и</span> стены, действительно, шумоподавляющие. <span class="feedback__subtitle feedback__subtitle_uppercase feedback__subtitle ">в</span>ыкрикивал комплименты повару — никто 
не жаловался из соседей.`, subtitleStyleModificator: "main-theme", subtitlePositionModificator: "left-top" })
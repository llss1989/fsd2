include /components/header/header.pug
include /components/footer/footer.pug
include /components/filterDateDropdown/filterDateDropdown.pug
include /components/dropdown/dropdown.pug
include /components/rangeSlider/rangeSlider.pug
include /components/check/check.pug


doctype html
html
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible" content="IE=E dge")
    meta(name="viewport" content="width=device-width,initial-scale=1, maximum-scale= 1.0, user-scalable=0")
    link(href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet")
    //- link(rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.1/css/all.css")
    //- link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css")
    title searchRoom
   
body
  div(class="search-room")
    section(class="search-room__header")
      - const headerOptions = { headerModificator: "wide", menuPositionModificator: "horizontal", navListModificator: "horizontal", navListInternalIndent: "mr20", menuItems: [ { linkName: "<span class='link__first-letter link__first-letter_uppercase'>о</span> нас" , sublinks: false },  { linkName: "<span class='nav-list nav-list__dropdown-name_uppercase'>у</span>слуги" , sublinks: { type: "link", items:[ "услуга1", "услуга2", "услуга3", "услуга4" ]} },  { linkName: "<span class='link__first-letter link__first-letter_uppercase'>в</span>акансии" , sublinks: false },  { linkName: "<span class='link__first-letter link__first-letter_uppercase's>н</span>овости" , sublinks: false }, { linkName: "<span class='nav-list__dropdown-name_uppercase'>с</span>оглашения" , sublinks: {type: "link", items:[ "соглашение1", "соглашение2", "соглашение3" ]} }] }
      +header(headerOptions)
    section(class="search-room__main-section")
      div(class="search-room__parameters")
        +filterDateDropdown(true, ['даты пребывания в отеле', 'invisible', '', 'wide'])
        +dropdown("_guests", "standart-size", true, [ "гости", "invisible", "mt4", "active", "wide"])
        +rangeSlider("диапозон цены", "5 000₽ - 10 000₽", "Стоимость за сутки пребывания в номере")
        fieldset(class="form-elements_item checkboxes")
          legend(class="form-elements__title checkboxes_title")="check buttons"
          div(class="checkboxes_inner")
            +check('можно курить', false, {checkType: 'standart', labelStyle: 'normal-text', labelPosition: 'pl30px'})
            +check('можно с питомцами', false, {checkType: 'standart', labelStyle: 'normal-text', labelPosition: 'pl30px'})
            +check('можно пригласить гостей <br> (до 10 человек)', false, {checkType: 'standart', labelStyle: 'normal-text', labelPosition: 'pl30px'})
      div(class="search-room__rooms")
    section(class="search-room__footer")
      +footer("horizontal")
mixin colorData(colorName, colorNumber,colorNameCssClass)
  .color-data
    div(class= "color-data__color-view color-data__color-view"+colorNameCssClass)
    .color-info
      h1(class= "color-info__color-name color-info__color-name" + colorNameCssClass)= colorName
      p(class= 'color-info__color-number color-info__color-number' + colorNumber)= colorNumber
